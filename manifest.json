{
    "manifest_version": 3,
    "name": "Jadwaly",
    "description": "إضافة تساعد طلاب الجامعات في بناء جداولهم الدراسية بسهولة من خلال سحب المقررات المطروحة وعرضها بشكل بصري تفاعلي.",
    "version": "0.1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/images/icon-16.png",
            "32": "assets/images/icon-32.png"
        }
    },
    "icons": {
        "16": "assets/images/icon-16.png",
        "32": "assets/images/icon-32.png",
        "48": "assets/images/icon-48.png",
        "128": "assets/images/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://stu-gate.qu.edu.sa/qu/ui/student/offeredCourses/index/offeredCoursesIndex.faces",
                "https://stu-gate.qu.edu.sa/qu/ui/student/offeredCourses/*",
                "https://stu-gate.qu.edu.sa/qu/ui/student/homeIndex.faces",
                "https://stu-gate.qu.edu.sa/qu/ui/student/*",
                "https://eduservices.uqu.edu.sa/ui/students/offered-courses/offered.xhtml",
                "https://uqu.edu.sa/*"
            ],
            "js": [
                "assets/js/jquery.js",
                "injection.js"
            ],
            "css": [
                "assets/css/injection.css"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/images/*",
                "dist/*",
                "assets/js/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}